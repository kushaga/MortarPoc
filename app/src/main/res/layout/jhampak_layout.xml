<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/card_akosha_chat"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/card_shadow"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="4">

        <ImageView
            android:id="@+id/typing1"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_weight="1"
            android:src="@drawable/typing1"/>

        <ImageView
            android:id="@+id/typing2"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_weight="1"
            android:src="@drawable/typing2"/>

        <ImageView
            android:id="@+id/typing3"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_weight="1"
            android:src="@drawable/typing3"/>

        <ImageView
            android:id="@+id/typing4"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_weight="1"
            android:src="@drawable/typing4"/>

    </LinearLayout>

</LinearLayout>